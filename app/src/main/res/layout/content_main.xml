<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xenonapps.tejas.konnekt4.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#ffffff"
    android:screenOrientation="portrait">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="340sp"
        android:background="@drawable/back"
        android:columnCount="4"
        android:rowCount="4"
        android:id="@+id/board"
        android:layout_marginBottom="57dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <!-- Row 1 -->

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/b00"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="false"
            android:onClick="dropIn"
            android:layout_margin="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:tag="0"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/b01"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="dropIn"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="8dp"
            android:tag="1"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/b02"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="dropIn"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:tag="2"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/b03"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="dropIn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:tag="3"/>

        <!-- Row 2 -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b10"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:tag="4"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b11"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="11dp"
            android:tag="5"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b12"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="11dp"
            android:tag="6"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b13"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="11dp"
            android:tag="7"/>

        <!-- Row 3 -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b20"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:tag="8"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b21"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:tag="9"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b22"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:tag="10"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b23"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:tag="11"/>

        <!-- Row 4 -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b30"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:tag="12"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b31"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="11dp"
            android:tag="13"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b32"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="13dp"
            android:tag="14"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="dropIn"
            android:id="@+id/b33"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:tag="15"/>

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW GAME"
            android:id="@+id/reset"
            android:onClick="reset"
            android:layout_alignBaseline="@+id/score2"
            android:layout_alignBottom="@+id/score2"
            android:layout_alignEnd="@+id/board" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1 : 0"
        android:id="@+id/score1"
        android:layout_above="@+id/board"
        android:layout_alignStart="@+id/board"
        android:layout_marginBottom="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 : 0"
        android:id="@+id/score2"
        android:layout_alignTop="@+id/score1"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
